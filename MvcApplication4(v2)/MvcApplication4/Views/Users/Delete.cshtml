@model MvcApplication4.Models.Users

@{
    ViewBag.Title = "Delete";
}

<h2>Удаление пользователя</h2>

<h3>Вы действительно хотите удалить этого пользователя?</h3>
<fieldset style="font-size: 17px">
    <legend>Пользователь</legend>

    <div class="display-label">
         ФИО
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.fio_user)
    </div>

    <div class="display-label">
         Логин
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.login_user)
    </div>

    <div class="display-label">
         Возраст
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.age_user)
    </div>

    <div class="display-label">
        Телефон
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.phone_user)
    </div>

    <div class="display-label">
         Фотография
    </div>
    <div class="display-field">
        <img src="@Url.Content(@Model.foto_user)" width="100" height="100" />
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p style="font-size: 17px">
        <input type="submit" value="Удалить" /> |
        @Html.ActionLink("Вернуться назад", "Index")
    </p>
}
