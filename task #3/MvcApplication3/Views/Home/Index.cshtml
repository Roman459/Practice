
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <title>Пользователи</title>
</head>
<body ng-app="ListUsers">
    <h1>Пользователи</h1>
      
    <p>
        Поиск <input type="text" ng-model="search.$" />  
    </p>

  

    <div ng-controller="ListUsersController">

          <p>
        Сортировка по : <select ng-model="sortColumn">
             <option value="Id">ID</option>
            <option value="Fio">ФИО</option>
            <option value="Login">Логин</option>
            <option value="Age">Возраст</option>
            </select>
            </p>
        <div class =" container">
        <div class =" panel panel-primary">
        <table class="table table-bordered table-striped table-hover" >
             <thead>
                <tr>
                    <th>ФИО</th>
                    <th>Логин</th>
                    <th>Возраст</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="user in users | orderBy:sortColumn | filter:search "> 
                    <td>{{user.Fio}}</td>
                    <td>{{user.Login}}</td>
                    <td>{{user.Age}}</td>
                </tr>
            </tbody>
</table>
            </div>
            </div>
 
    <p style="font-size: 20px; position: static; ">
    @Html.ActionLink("Администрация", "Admin")
    </p>

</body>

<script type="text/javascript" src="~/Scripts/angular.min.js"></script>

<script>
    var app = angular.module("ListUsers", []);
    app.controller("ListUsersController", function ($scope, $http, $sce, $rootScope) {

        $scope.sortColumn = "Id";

        $http.get('http://localhost:53120/api/users').
          success(function (data, status, headers, config) {
              $scope.users = data;
          }).
          error(function (data, status, headers, config) {
              alert("erro");
          });

    });
   
</script>


